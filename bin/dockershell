#!/bin/bash
# This script will find the latest docker image,  launch a new container from it, and connect to that container.

ROOT=true

# Parse command line
while [[ $# > 0 ]]
do
    key="$1"
    value="$2"

    case $key in
        --noroot)
            ROOT=false
            ;;
        --no-root)
            ROOT=false
            ;;
        -v)
            set -x
            ;;
        *)
            echo "Unknown option passed: $key"
            exit 1
            ;;
    esac
    shift
done


IMAGE_ID=`docker images | head -n 2 | grep -v REPOSITORY | tr -s ' ' | cut -d ' ' -f3`
if [ -n "$1" ]; then
    IMAGE_ID="$1"
fi

ROOT_CMD=""
if [ "$ROOT" = true ] ; then
    ROOT_CMD="--user root"
fi
CONT_ID=`docker run -idt $ROOT_CMD $IMAGE_ID /bin/bash`


function clean {
  docker rm -f $CONT_ID
}
trap clean EXIT

docker exec -it $CONT_ID /bin/bash
